@model LoginViewModel

@{
    ViewData["Title"] = "NERA | Login";
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
}

<div class="auth-page">
    <h1>Sign in</h1>
    <p class="auth-page__intro">Enter your email and password to access the dashboard.</p>

    <form asp-action="Login" method="post" class="auth-form">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

        <input type="hidden" asp-for="ReturnUrl" />

        <div class="form-row">
            <label asp-for="Email"></label>
            <input asp-for="Email" autocomplete="email" />
            <span asp-validation-for="Email" class="field-validation"></span>
        </div>

        <div class="form-row">
            <label asp-for="Password"></label>
            <input asp-for="Password" autocomplete="current-password" />
            <span asp-validation-for="Password" class="field-validation"></span>
        </div>

        <div class="form-row checkbox-row">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>

        <button type="submit" class="auth-form__submit">Log in</button>
    </form>

    <div class="auth-page__footer">
        <span>Need an account?</span>
        <a asp-action="Register" asp-route-returnUrl="@(Model.ReturnUrl ?? string.Empty)">Sign up</a>
    </div>
</div>
