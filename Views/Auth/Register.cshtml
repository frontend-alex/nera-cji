@model RegisterViewModel

@{
    ViewData["Title"] = "NERA | Register";
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
}

<div class="auth-page">
    <h1>Create an account</h1>
    <p class="auth-page__intro">Register with your details below to access NERA-CGI.</p>

    <form asp-action="Register" method="post" class="auth-form">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

        <input type="hidden" asp-for="ReturnUrl" />

        <div class="form-row">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" autocomplete="name" />
            <span asp-validation-for="FullName" class="field-validation"></span>
        </div>

        <div class="form-row">
            <label asp-for="Email"></label>
            <input asp-for="Email" autocomplete="email" />
            <span asp-validation-for="Email" class="field-validation"></span>
        </div>

        <div class="form-row">
            <label asp-for="Password"></label>
            <input asp-for="Password" autocomplete="new-password" />
            <span asp-validation-for="Password" class="field-validation"></span>
        </div>

        <div class="form-row">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" autocomplete="new-password" />
            <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
        </div>

        <button type="submit" class="auth-form__submit">Register</button>
    </form>

    <div class="auth-page__footer">
        <span>Already registered?</span>
        <a asp-action="Login" asp-route-returnUrl="@(Model.ReturnUrl ?? string.Empty)">Sign in</a>
    </div>
</div>
