@{
    ViewData["Title"] = "NERA | Dashboard";
}

<div class="p-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Dashboard</h1>
        <p class="text-gray-600 mt-2">Welcome to your dashboard</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Dashboard cards can go here -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-2">Quick Stats</h2>
            <p class="text-gray-600">Your dashboard content goes here</p>
        </div>
    </div>

    <div class="mt-6">
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Account Actions</h2>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="px-6 py-3 rounded-full bg-red-600 text-white text-sm font-semibold hover:bg-red-700 transition-colors">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>

