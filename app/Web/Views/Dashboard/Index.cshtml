@model nera_cji.ViewModels.DashboardViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = "NERA | Dashboard";

    // Get user name and email from claims or model
    var userName = User.FindFirstValue(ClaimTypes.Name) ?? Model.UserName ?? Model.UserEmail;
    var userEmail = Model.UserEmail;
}

<div class="bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto px-6 py-8 space-y-8">

        <!-- Header -->
        <section>
            <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
            <p class="text-sm text-gray-600 mt-1">
                Welcome back, <span class="font-semibold">@userEmail</span>
            </p>
        </section>

        <!-- Stats Grid -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Total Events -->
            <div class="bg-white border border-gray-200 rounded-xl p-6">
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Total Events</p>
                        <p class="text-4xl font-light text-gray-900">@Model.TotalEvents</p>
                    </div>
                    <div class="h-10 w-10 rounded-lg bg-blue-600 flex items-center justify-center">
                        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M6.75 3v2.25M17.25 3v2.25M4.5 9.75h15M5.25 6.75h13.5A1.5 1.5 0 0 1 20.25 8.25v10.5a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5z" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="bg-white border border-gray-200 rounded-xl p-6">
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Upcoming Events</p>
                        <p class="text-4xl font-light text-gray-900">@Model.UpcomingEvents</p>
                    </div>
                    <div class="h-10 w-10 rounded-lg bg-green-600 flex items-center justify-center">
                        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M12 6v6l3 3m6-3A9 9 0 1 1 3 12a9 9 0 0 1 18 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- My Registrations -->
            <div class="bg-white border border-gray-200 rounded-xl p-6">
                <div class="flex items-start justify-between">
                    <div>
                        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">My Registrations</p>
                        <p class="text-4xl font-light text-gray-900">@Model.MyRegistrations</p>
                    </div>
                    <div class="h-10 w-10 rounded-lg bg-purple-600 flex items-center justify-center">
                        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15.75 6.75a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0zM4.5 20.25a7.5 7.5 0 0 1 15 0" />
                        </svg>
                    </div>
                </div>
            </div>
        </section>

        <!-- Recent Activity -->
        <section class="bg-white border border-gray-200 rounded-xl p-6">
            <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-4">Recent Activity</h2>

            <div class="space-y-4">
                <!-- Last Event Registered -->
                <div class="border-b border-gray-200 pb-4">
                    <div class="flex items-start gap-3">
                        <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center flex-shrink-0">
                            <svg class="h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Last Event Registered</p>
                            @if (Model.LastEventRegistered != null)
                            {
                                <p class="text-sm font-medium text-gray-900 truncate">@Model.LastEventRegistered.Title</p>
                                <p class="text-xs text-gray-500 mt-1">@Model.LastEventRegistered.Start_Time.ToString("MMM dd, yyyy")</p>
                            }
                            else
                            {
                                <p class="text-sm text-gray-500">No registrations yet</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Last Event Created -->
                <div class="border-b border-gray-200 pb-4">
                    <div class="flex items-start gap-3">
                        <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Last Event Created</p>
                            @if (Model.LastEventCreated != null)
                            {
                                <p class="text-sm font-medium text-gray-900 truncate">@Model.LastEventCreated.Title</p>
                                <p class="text-xs text-gray-500 mt-1">@Model.LastEventCreated.Created_At.ToString("MMM dd, yyyy")</p>
                            }
                            else
                            {
                                <p class="text-sm text-gray-500">No events created yet</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Recent Notifications -->
                <div>
                    <div class="flex items-start gap-3">
                        <div class="h-10 w-10 rounded-lg bg-green-100 flex items-center justify-center flex-shrink-0">
                            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Recent Notifications</p>
                            @if (Model.RecentNotifications != null && Model.RecentNotifications.Count > 0)
                            {
                                <div class="space-y-2 mt-2">
                                    @foreach (var notification in Model.RecentNotifications.Take(3))
                                    {
                                        <div class="flex items-start gap-2">
                                            <div class="h-1.5 w-1.5 rounded-full @(notification.Is_Read ? "bg-gray-300" : "bg-green-500") mt-1.5 flex-shrink-0"></div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm text-gray-900 truncate">@notification.Message</p>
                                                <p class="text-xs text-gray-500">@notification.Created_At.ToString("MMM dd, yyyy HH:mm")</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-sm text-gray-500">No notifications</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Actions -->
        <section class="bg-white border border-gray-200 rounded-xl p-6">
            <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-4">Quick Actions</h2>

            <div class="flex flex-wrap gap-3">
                <a href="/app/v1/events"
                   class="inline-flex items-center gap-2 px-6 py-3 text-white text-sm font-semibold rounded-md shadow-lg 
                          bg-gradient-to-r from-red-600 via-pink-600 to-purple-700 
                          hover:from-red-700 hover:via-pink-700 hover:to-purple-800 
                          transition-all transform hover:scale-105">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3.75 5.25h16.5M3.75 9.75h16.5m-16.5 4.5h16.5M3.75 19.5h16.5" />
                    </svg>
                    View All Events
                </a>

                <a href="/app/v1/events/create"
                   class="inline-flex items-center gap-2 px-6 py-3 text-white text-sm font-semibold rounded-md shadow-lg 
                          bg-gradient-to-r from-red-600 via-pink-600 to-purple-700 
                          hover:from-red-700 hover:via-pink-700 hover:to-purple-800 
                          transition-all transform hover:scale-105">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Create New Event
                </a>
            </div>
        </section>

        <!-- My Registered Events -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 mt-8">
            <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-4">
                My Registered Events
            </h2>

            @if (Model.RegisteredEvents != null && Model.RegisteredEvents.Count > 0)
            {
                <ul class="divide-y divide-gray-200">
                    @foreach (var evt in Model.RegisteredEvents)
                    {
                        <li class="py-4 flex items-center justify-between">
                            <div>
                                <div class="font-medium text-gray-900">@evt.Title</div>

                                <div class="text-xs text-gray-500">
                                    @evt.Start_Time.ToString("dd MMM yyyy, HH:mm")
                                    @if (!string.IsNullOrWhiteSpace(evt.Location))
                                    {
                                        @(" ï¿½ " + evt.Location)
                                    }
                                </div>
                            </div>

                            <a href="#" 
                               data-event-id="@evt.Id"
                               class="text-sm text-blue-600 hover:text-blue-700 font-medium cursor-pointer">
                                View details
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-sm text-gray-500">
                    You haven't registered for any events yet.
                </p>
            }
        </div>
    </div>
</div>

