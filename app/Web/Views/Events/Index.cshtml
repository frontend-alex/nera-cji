@model IReadOnlyCollection<nera_cji.Models.Event>
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
}
@{
    var registrations = ViewBag.RegistrationCounts as IDictionary<int, int>
                        ?? new Dictionary<int, int>();

    // HashSet<int> – eventIds the current user is registered for
    var registeredEvents = ViewBag.RegisteredEventIds as ISet<int>
                           ?? new HashSet<int>();
}


<div class="p-8 bg-gray-50 min-h-screen">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-light text-gray-900 mb-2">Employee Events</h1>
        <p class="text-gray-600">Browse and register for upcoming company events</p>
    </div>

    <!-- Events Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3  gap-6 mb-8" >
        @if (Model != null && Model.Count > 0)
        {@foreach (var evt in Model)
            {
                
                var capacity = evt.Max_Participants ?? 0;
                var registeredCount = registrations.ContainsKey(evt.Id) ? registrations[evt.Id] : 0;

                var spotsLeft = capacity > 0 ? capacity - registeredCount : capacity;
                if (spotsLeft < 0)
                {
                    spotsLeft = 0;
                }

                var isFull = capacity > 0 && spotsLeft == 0;
                var isRegistered = registeredEvents.Contains(evt.Id);
                var status = isFull ? "full" : "open"; 

                
                <div class="bg-white border border-gray-200 p-6 rounded-xl">
                    

                            
                            <h3 class="text-xl font-light text-gray-900 mb-2">@evt.Title</h3>
                            <p class="text-sm text-gray-600 mb-4">@(evt.Description ?? "No description available")</p>
                            
                            <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span>@evt.Start_Time.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>@evt.Start_Time.ToString("HH:mm")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    <span>@evt.Location</span>
                                </div>
                            </div>
                            <div class="flex flex-col items-end gap-3">
                        <div class="flex flex-col items-end gap-3">
                            @if (isRegistered)
                            {
                                <form asp-controller="Events"
                                      asp-action="Unregister"
                                      asp-route-id="@evt.Id"
                                      method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="px-6 py-2 bg-gray-200 text-gray-800 text-sm font-medium rounded-md hover:bg-gray-300 transition-colors">
                                        Unregister
                                    </button>
                                </form>
                            }
                            else if (isFull)
                            {
                                <button class="px-6 py-2 bg-gray-400 text-white text-sm font-medium rounded-md cursor-not-allowed" disabled>
                                    Full
                                </button>
                            }
                            else
                            {
                                <form asp-controller="Events"
                                      asp-action="Register"
                                      asp-route-id="@evt.Id"
                                      method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors">
                                        Register
                                    </button>
                                </form>
                            }

                            <span class="text-xs text-gray-500">@spotsLeft spots available</span>
                        </div>

                    </div>
                 </div>
                        
                        <div class="flex flex-col items-end gap-3">
                            
                        </div>

            }
        }
        else
        {
            <div class="bg-white border border-gray-200 p-12 text-center">
                <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-gray-500 text-lg font-light">No events available at this time</p>
                <p class="text-gray-400 text-sm mt-2">Check back later for upcoming events</p>
            </div>
        }
    </div>
</div>