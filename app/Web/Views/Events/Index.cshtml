@model IReadOnlyCollection<nera_cji.Models.Event>
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
}

<div class="p-8 bg-gray-50 min-h-screen">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-light text-gray-900 mb-2">Employee Events</h1>
        <p class="text-gray-600">Browse and register for upcoming company events</p>
    </div>

    <!-- Events Grid -->
    <div class="grid gap-4">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var evt in Model)
            {
                var isOpen = (evt.Max_Participants == null || evt.Max_Participants == 0) || true;
                var status = isOpen ? "open" : "full";
                
                <div class="bg-white border border-gray-200 p-6">
                    <div class="flex items-start justify-between gap-4">
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="px-3 py-1 text-xs font-medium uppercase tracking-wide @(status == "open" ? "bg-green-50 text-green-700 border border-green-200" : "bg-yellow-50 text-yellow-700 border border-yellow-200")">
                                    @(status == "open" ? "Open" : "Waitlist")
                                </span>
                                <span class="text-sm text-gray-500">@(evt.Max_Participants ?? 0) capacity</span>
                            </div>
                            
                            <h3 class="text-xl font-light text-gray-900 mb-2">@evt.Title</h3>
                            <p class="text-sm text-gray-600 mb-4">@(evt.Description ?? "No description available")</p>
                            
                            <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span>@evt.Start_Time.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>@evt.Start_Time.ToString("HH:mm")</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    <span>@evt.Location</span>
                                </div>
                            </div>
                        </div>
                        
                       <div class="flex flex-col items-end gap-3">
                    <p class="text-sm font-medium text-gray-800">
                        @(evt.Event_Cost == 0 
                            ? "Free" 
                        : $"â‚¬{evt.Event_Cost:F2}")
                    </p>
                    <button class="px-6 py-2 bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-colors">
                        Register
                    </button>

                    <span class="text-xs text-gray-500">@(evt.Max_Participants ?? 0) spots available</span>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="bg-white border border-gray-200 p-12 text-center">
                <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-gray-500 text-lg font-light">No events available at this time</p>
                <p class="text-gray-400 text-sm mt-2">Check back later for upcoming events</p>
            </div>
        }
    </div>
</div>