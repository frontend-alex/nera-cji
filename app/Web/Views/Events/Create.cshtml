@model CreateEventViewModel
@inject nera_cji.Interfaces.Services.IEventService _eventService
@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
    
    var events = await _eventService.GetAllAsync();
    var publishedCount = events.Count(e => e.Status == "Published" || e.Status == "posted");
    var draftCount = events.Count(e => e.Status == "Draft" || e.Status == "draft");
    var capacityTotal = events.Sum(e => e.Max_Participants ?? 0);
}

<div class="p-8 bg-gray-50 min-h-screen">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-light text-gray-900 mb-2">Create Event</h1>
        <p class="text-gray-600">Add a new event to the system</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white border border-gray-200 p-6">
            <div class="flex items-start justify-between">
                <div>
                    <p class="text-sm text-gray-500 uppercase tracking-wide mb-2">Published Events</p>
                    <p class="text-4xl font-light text-gray-900">@publishedCount</p>
                </div>
                <div class="h-12 w-12 bg-green-50 flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white border border-gray-200 p-6">
            <div class="flex items-start justify-between">
                <div>
                    <p class="text-sm text-gray-500 uppercase tracking-wide mb-2">Draft Events</p>
                    <p class="text-4xl font-light text-gray-900">@draftCount</p>
                </div>
                <div class="h-12 w-12 bg-yellow-50 flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white border border-gray-200 p-6">
            <div class="flex items-start justify-between">
                <div>
                    <p class="text-sm text-gray-500 uppercase tracking-wide mb-2">Total Capacity</p>
                    <p class="text-4xl font-light text-gray-900">@capacityTotal</p>
                </div>
                <div class="h-12 w-12 bg-blue-50 flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-6 items-start">
        <!-- Create Event Form -->
        <div class="bg-white border border-gray-200 p-6">
            <h2 class="text-xl font-light text-gray-900 mb-6">Event Details</h2>
            
            <form asp-action="Create" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-red-600 text-sm p-3 bg-red-50 border border-red-200"></div>
                
                <!-- Title -->
                <div>
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2">Event Title *</label>
                    <input asp-for="Title" 
                           class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                           placeholder="e.g., Annual Tech Conference 2025" />
                    <span asp-validation-for="Title" class="text-red-600 text-xs mt-1 block"></span>
                </div>

                <!-- Date and Time -->
                <div class="grid sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Date" class="block text-sm font-medium text-gray-700 mb-2">Event Date *</label>
                        <input asp-for="Date" 
                               type="date" 
                               class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               style="color-scheme: light;" />
                        <span asp-validation-for="Date" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="Time" class="block text-sm font-medium text-gray-700 mb-2">Start Time *</label>
                        <input asp-for="Time" 
                               type="time" 
                               class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               style="color-scheme: light;" />
                        <span asp-validation-for="Time" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                </div>

                <!-- Location and Capacity -->
                <div class="grid sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-2">Location *</label>
                        <input asp-for="Location" 
                               class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               placeholder="e.g., Conference Room A" />
                        <span asp-validation-for="Location" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="MaxParticipants" class="block text-sm font-medium text-gray-700 mb-2">Max Participants</label>
                        <input asp-for="MaxParticipants" 
                               type="number" 
                               min="1" 
                               class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               placeholder="e.g., 50" />
                        <p class="text-xs text-gray-500 mt-1">Leave empty for unlimited</p>
                    </div>
                </div>

                <div>
    <label asp-for="Event_Cost" class="block text-sm font-medium text-gray-700 mb-2">Event Cost (€)</label>
    <input asp-for="Event_Cost"
           type="number"
           step="0.01"
           min="0"
           class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
           placeholder="e.g., 49.99" />
    <p class="text-xs text-gray-500 mt-1">Set to 0 for free events</p>
    <span asp-validation-for="Event_Cost" class="text-red-600 text-xs mt-1 block"></span>
</div>

                <!-- Description -->
                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Description" 
                              rows="4" 
                              class="w-full border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" 
                              placeholder="Provide details about the event..."></textarea>
                    <p class="text-xs text-gray-500 mt-1">Optional - Add event details, agenda, or special instructions</p>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-colors">
                        Create Event
                    </button>
                    <a href="/app/v1/events" class="px-6 py-3 border border-gray-300 text-gray-700 text-sm font-medium hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

        <!-- Event List -->
        <div class="bg-white border border-gray-200 p-6">
            <h2 class="text-xl font-light text-gray-900 mb-6">All Events</h2>
            
            <div class="space-y-3 overflow-y-auto" style="max-height: 560px;">
                @if (events.Any())
                {
                    @foreach (var evt in events)
                    {
                        <div class="border border-gray-200 p-4">
                            <div class="flex items-start justify-between gap-2 mb-2">
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-1">
                                        <span class="px-2 py-0.5 text-xs font-medium uppercase tracking-wide @((evt.Status == "Published" || evt.Status == "posted") ? "bg-green-50 text-green-700 border border-green-200" : "bg-yellow-50 text-yellow-700 border border-yellow-200")">
                                            @(evt.Status ?? "Draft")
                                        </span>
                                    </div>
                                    <h3 class="text-base font-medium text-gray-900">@evt.Title</h3>
                                    <p class="text-xs text-gray-500 mt-1">
                                        @evt.Start_Time.ToString("MMM dd, yyyy") · @evt.Start_Time.ToString("HH:mm") · @evt.Location
                                    </p>
                                    <p class="text-xs text-gray-600 mt-1">
                                    <span class="font-medium text-gray-800">Cost:</span>
                                        @(evt.Event_Cost == 0 ? "Free" : $"€{evt.Event_Cost:F2}")
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-100">
                                <span class="text-xs text-gray-500">Capacity: @(evt.Max_Participants ?? 0)</span>
                                <form asp-action="Delete" asp-route-id="@evt.Id" method="post" class="inline" onsubmit="return confirm('Delete this event?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="px-3 py-1 text-xs font-medium border border-red-200 text-red-700 hover:bg-red-50 transition-colors">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="text-gray-500 text-sm">No events created yet</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
