@model CreateEventViewModel
@inject nera_cji.Interfaces.Services.IEventService _eventService
@{
    ViewData["Title"] = "Events | Admin";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
}

<div class="p-6 space-y-6" id="admin-events">
    <div class="flex flex-col gap-3 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
        <div class="flex items-start justify-between gap-4">
            <div>
                <p class="text-sm text-gray-500">admin events page</p>
                <h1 class="text-2xl font-bold text-gray-900">manage Events</h1>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">posted</p>
            <div class="flex items-end justify-between">
                <span class="text-2xl font-bold text-gray-900" id="admin-stat-published">0</span>
                <span class="text-xs rounded-full bg-emerald-100 text-emerald-700 px-2 py-1">Live</span>
            </div>
        </div>
        <div class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">drafts</p>
            <div class="flex items-end justify-between">
                <span class="text-2xl font-bold text-gray-900" id="admin-stat-drafts">0</span>
                <span class="text-xs rounded-full bg-amber-100 text-amber-700 px-2 py-1">Review</span>
            </div>
        </div>
        <div class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
            <p class="text-sm text-gray-500">capacity</p>
            <div class="flex items-end justify-between">
                <span class="text-2xl font-bold text-gray-900" id="admin-stat-capacity">0</span>
                <span class="text-xs rounded-full bg-gray-100 text-gray-700 px-2 py-1">Seats</span>
            </div>
        </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-6">
        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <div class="flex items-start justify-between">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900">create event</h2>
                </div>
            </div>

            <form asp-action="Create" method="post" class="mt-4 space-y-4">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-red-500 text-sm mb-4 p-3 bg-red-50 rounded-lg"></div>
                
                <div>
                    <label asp-for="Title" class="text-sm font-semibold text-gray-800">Title</label>
                    <input asp-for="Title" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" placeholder="Test Event" />
                    <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
                </div>
                <div class="grid sm:grid-cols-2 gap-3">
                    <div>
                        <label asp-for="Date" class="text-sm font-semibold text-gray-800">Date</label>
                        <input asp-for="Date" type="date" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" />
                        <span asp-validation-for="Date" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="Time" class="text-sm font-semibold text-gray-800">Time</label>
                        <input asp-for="Time" type="time" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" />
                        <span asp-validation-for="Time" class="text-red-500 text-xs"></span>
                    </div>
                </div>
                <div class="grid sm:grid-cols-2 gap-3">
                    <div>
                        <label asp-for="Location" class="text-sm font-semibold text-gray-800">Location</label>
                        <input asp-for="Location" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" placeholder="Test Room" />
                        <span asp-validation-for="Location" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="MaxParticipants" class="text-sm font-semibold text-gray-800">Max Participants (optional)</label>
                        <input asp-for="MaxParticipants" type="number" min="1" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" placeholder="20" />
                    </div>
                </div>
                <div>
                    <label asp-for="Description" class="text-sm font-semibold text-gray-800">Description</label>
                    <textarea asp-for="Description" rows="3" class="mt-1 w-full rounded-xl border border-gray-200 px-3 py-2 text-sm focus:border-[#5236ab] focus:ring-[#5236ab]" placeholder="Quick test description"></textarea>
                </div>
                <div class="flex items-center gap-3">
                    <button type="submit" class="px-4 py-2 rounded-full bg-[#5236ab] text-white text-sm font-semibold">Add to list</button>
                </div>
            </form>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <div class="flex items-start justify-between">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900">created events</h2>
                </div>
            </div>
            @{
                var events = await _eventService.GetAllAsync();
                var publishedCount = events.Count(e => e.Status == "Published" || e.Status == "posted");
                var draftCount = events.Count(e => e.Status == "Draft" || e.Status == "draft");
                var capacityTotal = events.Sum(e => e.MaxParticipants ?? 0);
            }
            
            <div class="mt-4 space-y-3">
                @if (events.Any())
                {
                    @foreach (var evt in events)
                    {
                        <article class="rounded-xl border border-gray-200 p-4 flex flex-col gap-3">
                            <div class="flex items-start justify-between gap-2">
                                <div>
                                    <p class="text-xs text-gray-500 uppercase tracking-wide">@(evt.Status ?? "Draft")</p>
                                    <h3 class="text-lg font-semibold text-gray-900">@evt.Title</h3>
                                    <p class="text-sm text-gray-600">@evt.StartTime.ToString("yyyy-MM-dd") · @evt.StartTime.ToString("HH:mm") · @evt.Location</p>
                                </div>
                                <span class="px-2 py-1 rounded-full text-xs font-semibold @((evt.Status == "Published" || evt.Status == "posted") ? "bg-emerald-100 text-emerald-700" : "bg-amber-100 text-amber-700")">
                                    @((evt.Status == "Published" || evt.Status == "posted") ? "Live" : "Draft")
                                </span>
                            </div>
                            <div class="text-xs text-gray-500">Capacity @(evt.MaxParticipants ?? 0)</div>
                            <div class="flex flex-wrap gap-2">
                                <form asp-action="Delete" asp-route-id="@evt.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="px-3 py-1.5 rounded-full text-sm font-semibold border border-red-200 text-red-700 hover:border-red-400">Remove</button>
                                </form>
                            </div>
                        </article>
                    }
                }
                else
                {
                    <p class="text-gray-500 text-sm">No events created yet.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const stats = {
                published: document.getElementById("admin-stat-published"),
                drafts: document.getElementById("admin-stat-drafts"),
                capacity: document.getElementById("admin-stat-capacity")
            };
            
            if (stats.published) stats.published.textContent = @publishedCount;
            if (stats.drafts) stats.drafts.textContent = @draftCount;
            if (stats.capacity) stats.capacity.textContent = @capacityTotal;
        })();
    </script>
}
