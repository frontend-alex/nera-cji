@{
    ViewData["Title"] = "Nera | About Us";
    Layout = "~/Views/Shared/Layouts/_LayoutAuth.cshtml";
}

<div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-purple-50 via-pink-50 to-red-50 py-20 lg:py-32">
        <div class="max-w-7xl mx-auto px-5 lg:px-0">
            <div class="max-w-3xl mx-auto text-center">
                <span class="cgi-logo w-[60px] h-[60px] mx-auto mb-6 block"></span>
                <h1 class="text-5xl lg:text-7xl font-bold text-[var(--heading-color)] mb-6">
                    About NERA-CGI
                </h1>
                <p class="text-xl text-stone-600 leading-relaxed">
                    Empowering organizations and individuals with cutting-edge event management solutions. 
                    We're dedicated to making event planning, registration, and participation seamless and efficient.
                </p>
            </div>
        </div>
    </section>

    <!-- Story Section -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-5 lg:px-0">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                    <h2 class="text-4xl font-bold text-[var(--heading-color)] mb-6">Our Story</h2>
                    <div class="space-y-4 text-stone-600 leading-relaxed">
                        <p>
                            NERA-CGI was born from a vision to revolutionize how events are managed and experienced. 
                            Recognizing the challenges organizations face in coordinating events, managing registrations, 
                            and engaging participants, we set out to create a comprehensive platform that addresses 
                            these pain points.
                        </p>
                        <p>
                            Built on modern technology and designed with user experience at its core, NERA-CGI has 
                            evolved into a trusted solution for event organizers across various industries. Our platform 
                            combines powerful features with intuitive design, making event management accessible to 
                            everyone.
                        </p>
                        <p>
                            Today, we continue to innovate and expand our capabilities, always staying ahead of the 
                            curve to provide our users with the best possible experience. We're committed to helping 
                            organizations create memorable events that bring people together.
                        </p>
                    </div>
                </div>
                <div class="relative">
                    <div class="bg-gradient-to-br from-purple-100 to-pink-100 rounded-2xl p-12 h-full flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-6xl font-bold text-purple-600 mb-2">2024</div>
                            <div class="text-xl text-stone-600">Founded</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20 bg-[var(--color-background-light-white)]">
        <div class="max-w-7xl mx-auto px-5 lg:px-0">
