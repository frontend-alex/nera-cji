@model nera_cji.Controllers.AccountViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = "NERA | Account";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
}

<div class="bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-6 py-8 space-y-6">
        
        <!-- Header -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-red-500 via-pink-500 to-purple-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg">
                    @{
                        var userInitials = !string.IsNullOrEmpty(Model.FullName) && Model.FullName != Model.Email 
                            ? (Model.FullName.Length > 0 ? Model.FullName.Substring(0, 1).ToUpper() : "U")
                            : (Model.Email.Length > 0 ? Model.Email.Substring(0, 1).ToUpper() : "U");
                    }
                    @userInitials
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Account Settings</h1>
                    <p class="text-sm text-gray-500 mt-1">Manage your account information and preferences</p>
                </div>
            </div>
        </div>

        <!-- Success/Error/Warning Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 border-2 border-green-400 text-green-900 px-6 py-4 rounded-lg shadow-md flex items-center gap-3 animate-fade-in">
                <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="flex-1">
                    <p class="font-semibold text-base">Success!</p>
                    <p class="text-sm mt-1">@TempData["Success"]</p>
                </div>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="bg-yellow-50 border-2 border-yellow-400 text-yellow-900 px-6 py-4 rounded-lg shadow-md flex items-center gap-3">
                <svg class="w-6 h-6 text-yellow-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div class="flex-1">
                    <p class="font-semibold text-base">Warning</p>
                    <p class="text-sm mt-1">@TempData["Warning"]</p>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-50 border-2 border-red-400 text-red-900 px-6 py-4 rounded-lg shadow-md flex items-center gap-3">
                <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="flex-1">
                    <p class="font-semibold text-base">Error</p>
                    <p class="text-sm mt-1">@TempData["Error"]</p>
                </div>
            </div>
        }

        <!-- Account Information -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Account Information
            </h2>
            
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="border border-gray-200 rounded-lg p-4">
                        <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Full Name</label>
                        <p class="text-base font-medium text-gray-900 mt-1">@Model.FullName</p>
                    </div>
                    
                    <div class="border border-gray-200 rounded-lg p-4">
                        <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Email Address</label>
                        <p class="text-base font-medium text-gray-900 mt-1">@Model.Email</p>
                    </div>
                    
                    <div class="border border-gray-200 rounded-lg p-4">
                        <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Role</label>
                        <div class="mt-1">
                            @if (Model.IsAdmin)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                    Administrator
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    User
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="border border-gray-200 rounded-lg p-4">
                        <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Account Status</label>
                        <div class="mt-1">
                            @if (Model.IsActive)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    Inactive
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="border border-gray-200 rounded-lg p-4">
                        <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Member Since</label>
                        <p class="text-base font-medium text-gray-900 mt-1">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                    </div>
                    
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="border border-gray-200 rounded-lg p-4">
                            <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Last Updated</label>
                            <p class="text-base font-medium text-gray-900 mt-1">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Change Password -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
                Change Password
            </h2>
            
            <form asp-controller="Account" asp-action="ChangePassword" method="post" class="space-y-4" id="changePasswordForm">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-50 border-2 border-red-400 text-red-900 px-6 py-4 rounded-lg shadow-md">
                        <div asp-validation-summary="All" class="text-sm"></div>
                    </div>
                }
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="ChangePassword.CurrentPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            Current Password
                        </label>
                        <input asp-for="ChangePassword.CurrentPassword" 
                               type="password" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                               placeholder="Enter your current password" />
                        <span asp-validation-for="ChangePassword.CurrentPassword" class="text-red-600 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="ChangePassword.NewPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            New Password
                        </label>
                        <input asp-for="ChangePassword.NewPassword" 
                               type="password" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                               placeholder="Enter your new password" />
                        <span asp-validation-for="ChangePassword.NewPassword" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-gray-500 mt-1">Password must be at least 6 characters long.</p>
                    </div>
                    
                    <div>
                        <label asp-for="ChangePassword.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                            Confirm New Password
                        </label>
                        <input asp-for="ChangePassword.ConfirmPassword" 
                               type="password" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                               placeholder="Confirm your new password" />
                        <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>
                
                    <div class="flex justify-end pt-4">
                    <button type="submit" 
                            id="updatePasswordBtn"
                            class="px-6 py-3 bg-gradient-to-r from-red-600 via-pink-600 to-purple-700 text-white text-sm font-semibold rounded-lg shadow-lg hover:from-red-700 hover:via-pink-700 hover:to-purple-800 transition-all disabled:opacity-50 disabled:cursor-not-allowed">
                        <span id="btnText">Update Password</span>
                        <span id="btnLoading" class="hidden">Updating...</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('changePasswordForm');
    const btn = document.getElementById('updatePasswordBtn');
    const btnText = document.getElementById('btnText');
    const btnLoading = document.getElementById('btnLoading');
    
    if (form && btn) {
        form.addEventListener('submit', function(e) {
            console.log('Password change form is being submitted...');
            
            // Validate required fields
            const currentPassword = form.querySelector('input[name="ChangePassword.CurrentPassword"]').value;
            const newPassword = form.querySelector('input[name="ChangePassword.NewPassword"]').value;
            const confirmPassword = form.querySelector('input[name="ChangePassword.ConfirmPassword"]').value;
            
            if (!currentPassword || !newPassword || !confirmPassword) {
                alert('Please fill in all password fields');
                e.preventDefault();
                return;
            }
            
            if (newPassword !== confirmPassword) {
                alert('New password and confirmation do not match');
                e.preventDefault();
                return;
            }
            
            // Show loading state
            btn.disabled = true;
            btnText.classList.add('hidden');
            btnLoading.classList.remove('hidden');
            
            console.log('Form validation passed, submitting...');
        });
    }
    
    // Show any TempData messages with animation
    const successMsg = document.querySelector('.bg-green-50');
    if (successMsg) {
        console.log('Success message found, scrolling into view');
        successMsg.scrollIntoView({ behavior: 'smooth', block: 'start' });
        // Highlight the message
        successMsg.style.animation = 'pulse 2s';
        // Auto-hide after 15 seconds
        setTimeout(() => {
            successMsg.style.transition = 'opacity 0.5s';
            successMsg.style.opacity = '0';
            setTimeout(() => successMsg.remove(), 500);
        }, 15000);
    }
    
    const errorMsg = document.querySelector('.bg-red-50');
    if (errorMsg) {
        console.log('Error message found');
        errorMsg.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
});
</script>

