@{
    ViewData["Title"] = "NERA | Account";
    Layout = "~/Views/Shared/Layouts/_LayoutRoot.cshtml";
}

<div class="p-6 space-y-6">
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
        <div class="flex items-start justify-between gap-4">
            <div>
                <p class="text-sm text-gray-500">account settings</p>
                <h1 class="text-2xl font-bold text-gray-900">Account</h1>
            </div>
        </div>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
        <div class="space-y-4">
            <div>
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Actions</h2>
                
                <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="px-6 py-3 rounded-full bg-red-600 text-white text-sm font-semibold hover:bg-red-700 transition-colors">
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
