@using System.Security.Claims

<div id="sidebar" class="sidebar">
    <div class="sidebar-header">
        <a href="/app/v1/dashboard" class="sidebar-logo">
            <span class="sidebar-logo-text">NERA</span>
        </a>
        <button class="sidebar-toggle" id="sidebar-toggle-btn" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m15 18-6-6 6-6"/>
            </svg>
        </button>
    </div>
    <div class="sidebar-content">
        <ul class="sidebar-menu">
            <li class="sidebar-menu-item">
                <a href="/app/v1/dashboard" class="sidebar-menu-button">
                    <span class="sidebar-menu-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/>
                        </svg>
                    </span>
                    <span class="sidebar-menu-text">Dashboard</span>
                </a>
            </li>
            <li class="sidebar-group">
                <div class="sidebar-group-label">MAIN MENU</div>
            </li>
            <li class="sidebar-menu-item">
                <button class="sidebar-menu-button" data-submenu="events-submenu" type="button">
                    <span class="sidebar-menu-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/>
                        </svg>
                    </span>
                    <span class="sidebar-menu-text">Events</span>
                    <span class="sidebar-menu-chevron">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="m9 18 6-6-6-6"/>
                        </svg>
                    </span>
                </button>
                <ul class="sidebar-submenu" id="events-submenu">
                    <li class="sidebar-submenu-item">
                        <a href="/app/v1/events" class="sidebar-submenu-button">
                            <span class="sidebar-submenu-text">All Events</span>
                        </a>
                    </li>
                    <li class="sidebar-submenu-item">
                        <a href="/app/v1/events/create" class="sidebar-submenu-button">
                            <span class="sidebar-submenu-text">Create Event</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                        {
                    <li class="sidebar-submenu-item">
                        <a href="/app/v1/events/admindeleteevents" class="sidebar-submenu-button">
                            <span class="sidebar-submenu-text">Manage Events</span>
                        </a>
                    </li>
                        }
                </ul>
            </li>
        </ul>
    </div>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="sidebar-footer">
            <div class="sidebar-user-profile">
                <a href="/app/v1/account" class="sidebar-user-avatar" title="Account Settings">
                    @{
                        var userEmail = User.FindFirstValue(ClaimTypes.Email) ?? "";
                        var userName = User.FindFirstValue(ClaimTypes.Name) ?? userEmail;
                        var userInitials = !string.IsNullOrEmpty(userName) && userName != userEmail 
                            ? (userName.Length > 0 ? userName.Substring(0, 1).ToUpper() : "U")
                            : (userEmail.Length > 0 ? userEmail.Substring(0, 1).ToUpper() : "U");
                    }
                    <span class="sidebar-user-initials">@userInitials</span>
                </a>
                <div class="sidebar-user-info">
                    <div class="sidebar-user-name">@userName</div>
                    <div class="sidebar-user-email">@userEmail</div>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="sidebar-user-logout-form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="sidebar-user-logout" title="Sign Out">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    }
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('sidebar-toggle-btn');
    const submenuButtons = document.querySelectorAll('[data-submenu]');
    
    // Toggle sidebar collapse
    if (toggleBtn) {
        toggleBtn.addEventListener('click', function() {
            sidebar.classList.toggle('collapsed');
            localStorage.setItem('sidebar-collapsed', sidebar.classList.contains('collapsed'));
        });
    }
    
    // Restore collapsed state
    if (localStorage.getItem('sidebar-collapsed') === 'true') {
        sidebar.classList.add('collapsed');
    }
    
    // Toggle submenus
    submenuButtons.forEach(button => {
        button.addEventListener('click', function() {
            const submenuId = this.getAttribute('data-submenu');
            const submenu = document.getElementById(submenuId);
            const isExpanded = submenu.classList.contains('expanded');
            
            // Close all submenus
            document.querySelectorAll('.sidebar-submenu').forEach(sm => {
                sm.classList.remove('expanded');
            });
            
            // Toggle current submenu
            if (!isExpanded) {
                submenu.classList.add('expanded');
            }
        });
    });
    
    // Set active menu item
    const currentPath = window.location.pathname;
    document.querySelectorAll('.sidebar-menu-button, .sidebar-submenu-button').forEach(link => {
        const href = link.getAttribute('href');
        if (href && currentPath === href) {
            link.classList.add('active');
            // Expand parent submenu if exists
            const parentSubmenu = link.closest('.sidebar-submenu');
            if (parentSubmenu) {
                parentSubmenu.classList.add('expanded');
            }
        }
    });
});
</script>
