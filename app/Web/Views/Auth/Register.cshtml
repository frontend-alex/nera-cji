@model RegisterViewModel

@{
    ViewData["Title"] = "NERA | Register";
    Layout = "~/Views/Shared/Layouts/_LayoutAuth.cshtml";
}

<div class="grid grid-cols-2">
    <div class="flex items-center justify-center">
        <div class="flex flex-col gap-10 p-5">
            <h1 class="text-4xl font-medium max-w-[420px] text-center">
                Hi! Welcome to Nera Event Management System.
            </h1>
            <form asp-action="Register" method="post" class="flex flex-col gap-8">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
                
                <div class="flex flex-col relative">
                    <label asp-for="FullName" class="absolute -top-3 left-5 bg-white px-2">Full Name</label>
                    <input asp-for="FullName" type="text" class="input" placeholder="John Doe" />
                    <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div class="flex flex-col relative">
                    <label asp-for="Email" class="absolute -top-3 left-5 bg-white px-2">Email</label>
                    <input asp-for="Email" type="email" class="input" placeholder="example@example.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div class="flex flex-col relative">
                    <label asp-for="Password" class="absolute -top-3 left-5 bg-white px-2">Password</label>
                    <input asp-for="Password" type="password" class="input" placeholder="••••••••••••••••" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div class="flex flex-col relative">
                    <label asp-for="ConfirmPassword" class="absolute -top-3 left-5 bg-white px-2">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="input" placeholder="••••••••••••••••" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                </div>
                <button type="submit" class="btn-fill-primary">Create an account</button>

                <div class="flex flex-col gap-5">
                    <span class="text-center text-stone-400">
                    Already have an account?
                    <a asp-action="Login" class="ml-2 underline font-medium text-black"
                        asp-route-returnUrl="@(Model.ReturnUrl ?? string.Empty)">Sign in
                    </a>
                    </span>
                    <div class="flex items-center justify-between">
                        <span class="w-full border-b border-stone-400"></span>
                        <p class="text-stone-400 text-xs w-full text-center">Or continue with</p>
                        <span class="w-full border-b border-stone-400"></span>
                    </div>
                    <button class="btn-fill-secondary">Continue with Google</button>
                </div>
            </form>
        </div>
    </div>
    <div class="relative flex items-center justify-center w-full min-h-screen bg-cover bg-center"
        style="background-image: url('/images/login-banner.png');">
        <div class="absolute inset-0 bg-black opacity-40"></div>

        <div class="absolute flex flex-col gap-3 bottom-30 left-0 right-0 p-5 max-w-[500px]">
            <span class="text-white text-4xl font-light">Nera Event Management System</span>
            <span class="text-white">Your gateway to comprehensive criminal justice information, empowering
                professionals, researchers, and the public with reliable data, expert insights, and the latest
                developments shaping law, policy, and reform across the justice system.</span>
        </div>
    </div>
</div>